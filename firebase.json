{
  "hosting": {
    "public": "public", // This line can be kept if you have static assets, otherwise remove it.
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app" // The name of your Firebase Function
      }
    ]
  },
  "functions": {
    "source": "."
  }
}
